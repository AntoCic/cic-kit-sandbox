rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function hasUserPermission(requiredPerm) {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        requiredPerm in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions;
    }
    function isAdmin() {
      return hasUserPermission('SUPERADMIN') || hasUserPermission('ADMIN');
    }

    function isSuperAdmin() {
      return hasUserPermission('SUPERADMIN');
    }
    
    function isOwner(userId) {
      return (isSignedIn() && request.auth.uid == userId) || isSuperAdmin();
    }

    match /users/{userId} {
      // Lettura: solo il proprietario (come prima)
      allow read: if isOwner(userId);

      allow create: if (isOwner(userId) && !('permissions' in request.resource.data))
                    || isAdmin();

      allow update: if
        (
          isOwner(userId) &&
          !request.resource.data.diff(resource.data).changedKeys().hasAny(['permissions'])
        )
        ||
        isAdmin();

      allow delete: if isOwner(userId);
      
      match /settings/{id} { allow read, write: if isOwner(userId); }
    }

    match /appConfig/{id} {
      allow read: if true;
      allow write: if isSignedIn() && hasUserPermission('SUPERADMIN');
    }

    match /users_public/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    match /settings/{id} {
      allow read, write: if isSignedIn();
    }
  }
}
